<idea-plugin>
  <id>DARTS</id>
  <name>DARTS_2.0</name>
  <version>1.0</version>
  <vendor>UNISA: SESA Lab</vendor>


  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="183.0"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <checkinHandlerFactory implementation="main.extension.CommitFactory"/>
  </extensions>

  <actions>
    <group id="SampleMenu" text="TestSmell detection" description="Sample menu" popup="true">
      <add-to-group group-id="AnalyzeMenu" anchor="last"  />
      <action id="TextSmellTextualDetection" class="main.action.TextualDetectionAction" text="Execute Textual detection" description="A test menu item" />
      <action id="TextSmellStructuralDetection" class="main.action.StructuralDetectionAction" text="Execute Structural detection" description="A test menu item" />
    </group>
  </actions>

</idea-plugin>
